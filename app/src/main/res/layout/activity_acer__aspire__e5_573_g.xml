<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lunatic.notebookcompare.ACER_Aspire_E5_573G">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aceraspiree5573"
        android:src="@drawable/aceraspiree5573"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name : ACER_Aspire_E5_573G"
        android:id="@+id/nameTxT"
        android:layout_alignBottom="@+id/aceraspiree5573"
        android:layout_alignRight="@+id/sizeTxt"
        android:layout_alignEnd="@+id/sizeTxt"
        android:layout_marginBottom="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CPU : Intel Core i5-5200U (2.20 GHz, 3 MB L3 Cache, up to 2.70)"
        android:id="@+id/cpuTxt"
        android:layout_below="@+id/nameTxT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Graphic Card : NVIDIA GeForce GT 940M (4GB GDDR3)"
        android:id="@+id/graphicCardTxt"
        android:layout_below="@+id/cpuTxt"
        android:layout_alignLeft="@+id/cpuTxt"
        android:layout_alignStart="@+id/cpuTxt"
        android:layout_marginTop="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Size : 15.6 inch (1366x768) HD"
        android:id="@+id/sizeTxt"
        android:layout_below="@+id/graphicCardTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Memory : 8 GB DDR3L"
        android:id="@+id/memoryTxt"
        android:layout_below="@+id/sizeTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hard Disk : 500 GB 5400 RPM"
        android:id="@+id/hardDiskTxT"
        android:layout_below="@+id/memoryTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="price : 16,900 บาท"
        android:id="@+id/priceTxt"
        android:layout_below="@+id/hardDiskTxT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
